generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @unique @default(uuid())
  name     String
  email    String @unique
  role     String
  password String
}

model Profile {
  id     String @unique @default(uuid())
  image  String
  resume String
}

model Skills {
  id   String @unique @default(uuid())
  name String
}

model Projects {
  id               String   @unique @default(uuid())
  thumbnails       String[]
  description      String
  techStack        String[]
  frontendLivelink String
  backendLivelink  String
  githubFrontend   String
  githubBackend    String
  githubFullStack  String
  problemFaced     String
}

model Education {
  id        String   @unique @default(uuid())
  degree    String
  startDate DateTime
  endData   DateTime
  institute String
  cgpa      Float
}

model Blog {
  id              String    @unique @default(uuid())
  authorname      String
  blogtitle       String
  publicationdate String
  category        String
  content         String
  images          String[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  Comment         Comment[]
  Reply           Reply[]
}

model Comment {
  id        String   @id @default(cuid())
  blogId    String
  name      String
  email     String
  content   String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id])
  Reply     Reply[]
}

model Reply {
  id        String   @id @default(cuid())
  blogId    String
  commentId String
  name      String
  email     String
  content   String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id])
  comment   Comment  @relation(fields: [commentId], references: [id])
}
